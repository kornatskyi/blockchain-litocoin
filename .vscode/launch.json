  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node0",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "args": ["--config", "${workspaceFolder}/config_files/node0/"],
      // "console": "externalTerminal",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Node1",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "args": ["--config", "${workspaceFolder}/config_files/node1/"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Node2",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "args": ["--config", "${workspaceFolder}/config_files/node2/"],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
    "compounds": [
      {
        "name": "Run multible nodes",
        "configurations": ["Node0", "Node1", "Node2"]
      }
    ]
}